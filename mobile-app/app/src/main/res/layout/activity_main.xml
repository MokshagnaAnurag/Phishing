<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEURA"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Think Smart. Stay Safe."
            android:textSize="14sp"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Risk Level Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/riskIndicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="#4CAF50"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Risk Level"
                        android:textSize="12sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvRiskLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOW"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Threats -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Threats"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvRecentThreats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No threats detected"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quick Scan Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Scan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnScanSMS"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:text="ðŸ“± Scan SMS"
                android:textSize="14sp"
                android:backgroundTint="#2196F3" />

            <Button
                android:id="@+id/btnScanCall"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:text="ðŸ“ž Scan Call"
                android:textSize="14sp"
                android:backgroundTint="#FF9800" />

            <Button
                android:id="@+id/btnScanEmail"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:text="ðŸ“§ Scan Email"
                android:textSize="14sp"
                android:backgroundTint="#9C27B0" />

            <Button
                android:id="@+id/btnScanURL"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:text="ðŸ”— Scan URL"
                android:textSize="14sp"
                android:backgroundTint="#F44336" />
        </GridLayout>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View History"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:layout_marginTop="8dp"
            android:backgroundTint="#757575" />

    </LinearLayout>
</ScrollView>


